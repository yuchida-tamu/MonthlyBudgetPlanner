<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.yuchida.budgetManager.ExportDialogController"
            prefHeight="400.0" prefWidth="600.0">
    <content>
        <BorderPane>
            <center>
                <VBox>
                    <HBox alignment="center">
                        <Label text="File name: "/>
                        <TextField fx:id = "fileNameTextField" onKeyReleased="#handleKeyRelease"/>
                        <Text text=".csv" />
                    </HBox>
                </VBox>
            </center>
        </BorderPane>
    </content>

</DialogPane>
